extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Ready to Register?

        // register form
        form(method='POST')
          div.form-group
            label(for='username') Username:
            input#email.form-control(type='username', name='username')
          div.form-group
            label(for='pw') Password:
            input#pw.form-control(type='password' name='password')
          button.btn.btn-primary(type='login', formaction='/login') Login
        
